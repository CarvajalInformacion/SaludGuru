                                                    <div>
                                                        <ul id="divAppointmentSchedule_Menu"></ul>
                                                        <div id="divAppointmentSchedule">
                                                        </div>
                                                    </div>
                                                    <!--templates-->
                                                    <div id="FreeScheduleIdForProfile">
