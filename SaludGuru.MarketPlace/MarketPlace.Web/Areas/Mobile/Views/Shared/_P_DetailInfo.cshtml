                                                        <div id="divAppointmentSchedule_Template_Grid">
                                                            <div class="SelOfficeGrid GridAP" id="divScheduleContainer_${OfficePublicId}">
                                                                <div id="divGrid_Title_@oCurrentOffice.OfficePublicId">
