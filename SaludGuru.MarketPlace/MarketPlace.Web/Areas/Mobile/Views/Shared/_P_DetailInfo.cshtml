                                                    foreach (var item in tel.Replace(" ", "").Split('-'))
                                                    {
                                                        if (item.Length == 7)
                                                        {
                                                            number = "tel:+57" + MarketPlace.Web.Controllers.BaseController.CityIndicative[oBaseController.CurrentCookie.CurrentCity].ToString() + item.ToString();
