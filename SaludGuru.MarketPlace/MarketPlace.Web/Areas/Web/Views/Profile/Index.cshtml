@model MarketPlace.Models.Profile.ProfileViewModel
@{
    Layout = "~/Areas/Web/Views/Shared/_Layout.cshtml";

    Model.RenderScripts = false;
}

<div>
    <!--Profile Basic Info-->
    <div>
        <!--Profile Images-->
        <div>
            @Html.Partial(MVC.Web.Shared.Views._P_ImageSlider, Model)
        </div>
        <!--Profile Basic Info Detail-->
        <div>
            @Html.Partial(MVC.Web.Shared.Views._P_BasicInfo, Model)
        </div>
    </div>
    <!--Profile Description-->
    <div>
        @Html.Partial(MVC.Web.Shared.Views._P_DetailInfo, Model)
    </div>
    <!--Profile Schedule-->
    <div>
        @Html.Partial(MVC.Web.Shared.Views._P_Appointment, Model)
    </div>
    <!--Profile Map-->
    <div>
        <div id="divOfficeMap" style="width:800px;height:800px;">

        </div>
    </div>
</div>
@{
    Model.RenderScripts = true;
}
@section inlinescripts
{
    @Html.Partial(MVC.Web.Shared.Views._P_ImageSlider, Model)
    @Html.Partial(MVC.Web.Shared.Views._P_DetailInfo, Model)
    @Html.Partial(MVC.Web.Shared.Views._P_Appointment, Model)
    <script type="text/javascript">
        $(document).ready(function () {

            var mapOptions = {
                center: new google.maps.LatLng(4.680258, -74.081769),
                zoom: 12,
                mapTypeId: google.maps.MapTypeId.ROADMAP
            };

            var map = new google.maps.Map(
                document.getElementById("divOfficeMap"),
                mapOptions);

        });
    </script>
}
