    @Scripts.Render("~/" + BackOffice.Web.Controllers.BaseController.AreaName + "/bundles/jquery")
    @Scripts.Render("~/" + BackOffice.Web.Controllers.BaseController.AreaName + "/bundles/jqueryval")
    @Scripts.Render("~/" + BackOffice.Web.Controllers.BaseController.AreaName + "/bundles/modernizr")
    @Scripts.Render("~/" + BackOffice.Web.Controllers.BaseController.AreaName + "/bundles/bootstrap")
    @Scripts.Render("~/" + BackOffice.Web.Controllers.BaseController.AreaName + "/bundles/kendo")
    @Scripts.Render("~/" + BackOffice.Web.Controllers.BaseController.AreaName + "/bundles/moment")
    @Scripts.Render("~/" + BackOffice.Web.Controllers.BaseController.AreaName + "/bundles/fullcalendar")
    @Scripts.Render("~/" + BackOffice.Web.Controllers.BaseController.AreaName + "/bundles/pttimeselect")
    @Scripts.Render("~/" + BackOffice.Web.Controllers.BaseController.AreaName + "/sitescripts")

    @*Render inline site scripts*@
    @RenderSection("inlinescripts", required: false)

    <script type="text/javascript">
        $(document).ready(function () {
            InitGlobalPagesControls({

                IsUserAdmin: @(BackOffice.Models.General.SessionModel.UserIsAutorized && BackOffice.Models.General.SessionModel.CurrentUserAutorization.Role == SessionController.Models.Profile.enumRole.SystemAdministrator ? "true" : "false"),

