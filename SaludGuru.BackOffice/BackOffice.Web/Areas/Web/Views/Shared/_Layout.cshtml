<body>

    <div>

        @if (BackOffice.Models.General.SessionModel.UserIsLoggedIn &&
                BackOffice.Models.General.SessionModel.UserIsAutorized)
        {
            <div>
                @Html.Partial(MVC.Web.Shared.Views._L_Header)
            </div>
        }
    </div>

    <!--Start internal content-->
    <div>
        @RenderBody()
    </div>
    <!--Div Error-->
    <div style="display:none;">
        <div id="dialogError" title="Error"></div>
    </div>
