<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <title>@ViewBag.Title</title>

    @*Render bondles styles*@
    @Styles.Render("~/" + BackOffice.Web.Controllers.BaseController.AreaName + "/content/css")
</head>
<body>
    <div>
        <div>
            @if (BackOffice.Models.General.SessionModel.UserIsLoggedIn)
            {
                @Html.Partial(MVC.Web.Shared.Views.Header)
            }
        </div>

        <!--Start internal content-->
        <div>
            @RenderBody()
        </div>
    </div>

    @*Render boundles scripts*@
    @Scripts.Render("~/" + BackOffice.Web.Controllers.BaseController.AreaName + "/bundles/jquery")
    @Scripts.Render("~/" + BackOffice.Web.Controllers.BaseController.AreaName + "/bundles/jqueryval")
    @Scripts.Render("~/" + BackOffice.Web.Controllers.BaseController.AreaName + "/bundles/modernizr")
    @Scripts.Render("~/" + BackOffice.Web.Controllers.BaseController.AreaName + "/bundles/bootstrap")
    @Scripts.Render("~/" + BackOffice.Web.Controllers.BaseController.AreaName + "/sitescripts")


    @*Render inline site scripts*@
    @RenderSection("inlinescripts", required: false)
</body>
</html>
